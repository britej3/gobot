# ============================================================================
# GOBOT MAINNET CONFIGURATION - PRODUCTION TRADING
# ============================================================================
# THIS CONFIGURATION IS FOR LIVE TRADING WITH REAL USDT
# ============================================================================

# ============================================================================
# BINANCE MAINNET API KEYS - REQUIRED
# ============================================================================
BINANCE_API_KEY=YOUR_BINANCE_MAINNET_API_KEY_HERE
BINANCE_API_SECRET=YOUR_BINANCE_MAINNET_API_SECRET_HERE

# CRITICAL: false = MAINNET, true = TESTNET
BINANCE_USE_TESTNET=false

# ============================================================================
# AUTO-EXECUTION SETTINGS - ENABLED FOR LIVE TRADING
# ============================================================================
AUTO_EXECUTE_TRADES=true
AUTO_EXECUTE_MIN_CONFIDENCE=0.75
AUTO_EXECUTE_MAX_DAILY_TRADES=5

# ============================================================================
# OPTIMIZED RISK MANAGEMENT (Capital Efficient)
# ============================================================================
# Start with minimal capital, scale up based on performance
INITIAL_CAPITAL_USD=100           # Start with $100
MAX_POSITION_SIZE_USD=10          # Max $10 per trade (10% of capital)
DAILY_TRADE_LIMIT=30              # Max $30 per day (30% of capital)
WEEKLY_LOSS_LIMIT=50              # Auto-stop if losing $50/week

# Risk-Reward Optimization (1:2 minimum)
STOP_LOSS_PERCENT=2.0             # 2% stop loss
TAKE_PROFIT_PERCENT=4.0           # 4% take profit (2:1 risk:reward)
MAX_DAILY_DRAWDOWN=5.0            # 5% max daily drawdown before halt

# Trailing Stop (protects profits)
TRAILING_STOP_ENABLED=true
TRAILING_STOP_PERCENT=1.5         # Trail after 1.5% gain

# ============================================================================
# OPTIMIZED TRADING PARAMETERS
# ============================================================================
TRADING_INTERVAL_MINUTES=60       # Wait 1 hour between trades
MAX_TRADES_PER_DAY=3              # Max 3 trades per day (conservative)
SYMBOL_COOLDOWN_MINUTES=180       # 3 hours before trading same symbol

# Position Sizing (Kelly Criterion Lite)
KELLY_FRACTION=0.25               # Use 25% of optimal Kelly
MAX_RISK_PER_TRADE=0.02           # Max 2% risk per trade

# ============================================================================
# HIGH-PROBABILITY SETUP FILTERS
# ============================================================================
MIN_CONFIDENCE_THRESHOLD=0.75     # Only trade signals >75% confidence
MIN_RISK_REWARD_RATIO=2.0         # Minimum 2:1 risk:reward
MAX_SPREAD_PERCENT=0.1            # Max 0.1% spread
MIN_VOLUME_24H_USD=10000000       # $10M minimum 24h volume

# Trend Confirmation
REQUIRE_TREND_CONFIRMATION=true   # Only trade with trend
REQUIRE_VOLUME_SPIKE=true         # Volume must be above average

# ============================================================================
# ANTI-DETECTION (CRITICAL FOR MAINNET)
# ============================================================================
STEALTH_MODE=true
JITTER_ENABLED=true
JITTER_RANGE_MS=150
USER_AGENT_ROTATION=true
REQUEST_DELAY_MIN_MS=100
REQUEST_DELAY_MAX_MS=300
API_RATE_LIMIT_RPS=5              # Conservative rate limit

# ============================================================================
# TELEGRAM ALERTS - REQUIRED FOR MONITORING
# ============================================================================
TELEGRAM_NOTIFICATIONS=true
TELEGRAM_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
AUTHORIZED_CHAT_ID=YOUR_TELEGRAM_CHAT_ID_HERE

ALERT_POSITION_SIZE=5             # Alert if position > $5
ALERT_DAILY_PNL=-10               # Alert if daily P&L < -$10
ALERT_CONSECUTIVE_LOSSES=2        # Alert after 2 consecutive losses
ALERT_TRADE_EXECUTION=true        # Alert on every trade

# ============================================================================
# EMERGENCY CONTROLS
# ============================================================================
KILL_SWITCH_ENABLED=true
KILL_SWITCH_PASSWORD=STOP123
KILL_SWITCH_FILE=/tmp/gobot_kill_switch

MAX_API_ERRORS_PER_HOUR=3
MAX_API_ERROR_PERCENT=0.05
MAX_ACCEPTABLE_LATENCY=500

# ============================================================================
# LOGGING & AUDIT (Required for compliance)
# ============================================================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=/Users/britebrt/GOBOT/logs/mainnet_audit.log
TRADE_LOG_PATH=/Users/britebrt/GOBOT/logs/trades_mainnet.log
DETAILED_TRADE_LOG=true

# ============================================================================
# PERFORMANCE OPTIMIZATION
# ============================================================================
# Memory management
MAX_MEMORY_MB=256
RESTART_INTERVAL_HOURS=12

# Cache settings
CACHE_KLINES_MINUTES=5
CACHE_PRICE_SECONDS=30

# ============================================================================
# N8N WEBHOOKS (Optional)
# ============================================================================
N8N_BASE_URL=http://localhost:5678
N8N_WEBHOOK_USER=gobot_mainnet
N8N_WEBHOOK_PASS=gobot_secure_password_change_me
N8N_TRADE_WEBHOOK=http://localhost:5678/webhook/mainnet_trade
N8N_ALERT_WEBHOOK=http://localhost:5678/webhook/mainnet_alert

# ============================================================================
# RECOVERY SETTINGS
# ============================================================================
ENABLE_RECOVERY=true
RECOVERY_MODE=conservative
MAX_RECOVERY_ATTEMPTS=1
RECOVERY_COOLDOWN_HOURS=24

# ============================================================================
# SYMBOLS (High-probability setups only)
# ============================================================================
# Focus on high-volume, liquid pairs
WATCHLIST_SYMBOLS="BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,XRPUSDT,ADAUSDT,DOGEUSDT,DOTUSDT,LINKUSDT,AVAXUSDT"

# ============================================================================
# STRATEGY PARAMETERS (QuantCrawler Optimization)
# ============================================================================
STRATEGY=momentum_趋势跟踪
USE_AI_SIGNALS=true
AI_MODEL=quantcrawler
SIGNAL_WEIGHT=0.8

# Technical confirmation
REQUIRE_RSI_CONFIRMATION=true
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
REQUIRE_MACD_CONFIRMATION=true
