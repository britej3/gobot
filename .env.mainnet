# ============================================================================
# GOBOT MAINNET CONFIGURATION - REAL TRADING WITH USDT
# ============================================================================
# WARNING: This configuration is for LIVE TRADING with REAL FUNDS
# All values are in USDT - real money will be at risk
# ============================================================================

# ============================================================================
# BINANCE MAINNET API KEYS - REQUIRED
# ============================================================================
# Get keys from: https://www.binance.com/en/my/settings/api-management
# Enable "Read" and "Trade" permissions for Futures API
BINANCE_API_KEY=YOUR_BINANCE_MAINNET_API_KEY_HERE
BINANCE_API_SECRET=YOUR_BINANCE_MAINNET_API_SECRET_HERE

# CRITICAL: false = MAINNET, true = TESTNET
BINANCE_USE_TESTNET=false

# ============================================================================
# RISK MANAGEMENT - CONSERVATIVE START
# ============================================================================
# Start with small positions, increase after proving the system
MAX_POSITION_SIZE_USD=50          # Max $50 per trade (start small!)
DAILY_TRADE_LIMIT=200            # Max $200 per day
WEEKLY_LOSS_LIMIT=500            # Auto-stop if losing $500/week

# Stop Loss / Take Profit (2:1 risk:reward)
STOP_LOSS_PERCENT=2.0             # 2% stop loss
TAKE_PROFIT_PERCENT=4.0          # 4% take profit (2x the stop loss)
MAX_DAILY_DRAWDOWN=5.0           # 5% max daily drawdown before halt

# ============================================================================
# SYMBOLS TO TRADE (High liquidity, reasonable volatility)
# ============================================================================
WATCHLIST_SYMBOLS="BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,XRPUSDT,ADAUSDT,DOGEUSDT,DOTUSDT,LINKUSDT,AVAXUSDT,MATICUSDT,LTCUSDT,UNIUSDT,ATOMUSDT,NEARUSDT,FILUSDT,TRXUSDT"

# ============================================================================
# TRADING FREQUENCY
# ============================================================================
TRADING_INTERVAL_MINUTES=30      # Wait 30 min between auto-trades
MAX_TRADES_PER_DAY=5             # Max 5 trades per day
SYMBOL_COOLDOWN_MINUTES=120      # 2 hours before trading same symbol

# ============================================================================
# ANTI-DETECTION (Critical for mainnet)
# ============================================================================
STEALTH_MODE=true
JITTER_ENABLED=true
JITTER_RANGE_MS=200              # Random delay 0-200ms
USER_AGENT_ROTATION=true
REQUEST_DELAY_MIN_MS=100         # Min 100ms between requests
REQUEST_DELAY_MAX_MS=500         # Max 500ms between requests

# ============================================================================
# TELEGRAM ALERTS - REQUIRED FOR MAINNET
# ============================================================================
# Get bot token: @BotFather on Telegram
# Get chat ID: @userinfobot on Telegram
TELEGRAM_NOTIFICATIONS=true
TELEGRAM_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
AUTHORIZED_CHAT_ID=YOUR_TELEGRAM_CHAT_ID_HERE

# Alert thresholds
ALERT_POSITION_SIZE=25           # Alert if position > $25
ALERT_DAILY_PNL=-50              # Alert if daily P&L < -$50
ALERT_CONSECUTIVE_LOSSES=2       # Alert after 2 consecutive losses

# ============================================================================
# EMERGENCY CONTROLS
# ============================================================================
KILL_SWITCH_ENABLED=true
KILL_SWITCH_PASSWORD=STOP123     # Change this password!
KILL_SWITCH_FILE=/tmp/gobot_kill_switch

# Auto-halt thresholds
MAX_API_ERRORS_PER_HOUR=5        # Halt after 5 API errors
MAX_API_ERROR_PERCENT=0.1        # 10% error rate halt
MAX_ACCEPTABLE_LATENCY=1000      # Halt if consistently > 1s latency

# ============================================================================
# LOGGING & AUDIT (Required for mainnet compliance)
# ============================================================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=/Users/britebrt/GOBOT/logs/mainnet_audit.log
DETAILED_TRADE_LOG=true
TRADE_LOG_PATH=/Users/britebrt/GOBOT/logs/trades.log

# ============================================================================
# N8N WEBHOOKS (Optional - for automation)
# ============================================================================
N8N_BASE_URL=http://localhost:5678
N8N_WEBHOOK_USER=gobot_mainnet
N8N_WEBHOOK_PASS=gobot_secure_password_change_me
N8N_TRADE_WEBHOOK=http://localhost:5678/webhook/mainnet_trade
N8N_ALERT_WEBHOOK=http://localhost:5678/webhook/mainnet_alert

# ============================================================================
# BINANCE RATE LIMITS (Mainnet)
# ============================================================================
BINANCE_RATE_LIMIT_RPS=8         # 8 requests per second max
BINANCE_RATE_LIMIT_BURST=16      # Burst capacity

# ============================================================================
# RECOVERY SETTINGS
# ============================================================================
ENABLE_RECOVERY=true
RECOVERY_MODE=conservative
MAX_RECOVERY_ATTEMPTS=1          # Only 1 recovery attempt
RECOVERY_COOLDOWN_HOURS=24       # 24h cooldown after recovery

# ============================================================================
# SCREENER SETTINGS
# ============================================================================
SCREENER_ENABLED=true
SCREENER_INTERVAL_SECONDS=900    # Scan every 15 minutes
SCREENER_MAX_PAIRS=3             # Top 3 opportunities only
SCREENER_MIN_VOLUME_24H=50000000 # $50M minimum volume
SCREENER_MIN_PRICE_CHANGE=2.0    # 2% price change minimum
